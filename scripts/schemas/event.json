{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "template": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "extra": {
        "type": "object",
        "properties": {
          "organizer": {
            "type": "string"
          },
          "event": {
            "type": "object",
            "properties": {
              "date": {
                "type": "string",
                "format": "date"
              },
              "start_time": {
                "type": "string",
                "format": "time"
              },
              "stop_time": {
                "type": "string",
                "format": "time"
              }
            },
            "required": ["date", "start_time", "stop_time"]
          },
          "venue": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "address_street": {
                "type": "string"
              },
              "address_unit": {
                "type": "string"
              },
              "address_city": {
                "type": "string"
              },
              "address_zip": {
                "type": "string"
              },
              "website": {
                "type": "string"
              },
              "google_maps": {
                "type": "string"
              }
            },
            "required": ["name", "address_street", "address_city", "address_zip", "google_maps"]
          }
        },
        "required": ["organizer", "event", "venue"]
      }
    },
    "required": ["template", "title", "extra"]
  }
  